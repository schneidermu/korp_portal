<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Росводресурсы</title>
    <link rel="stylesheet" href="/front/styles/style_desk.css">
</head>
<body>
    <header>
        <div class="header-content">
            <img src="/front/src/rosvodres.png" alt="Росводресурсы Logo" class="logo">
            <img src="/front/src/serach icon.png" alt="Search Icon" class="search-icon">
        </div>
    </header>
    <div class="nav-bar-container">
        <nav>
            <button>Рабочий стол</button>
            <button>Мой профиль</button>
            <button>Орг. структура</button>
        </nav>
    </div>
    <div class="search-bar-container">
        <div class="search-bar">
            <input type="text" placeholder="Поиск...">
        </div>
    </div>
    <main>
        <section class="news">
            <h2>Новости</h2>
            <article class="news-item">
                <div class="news-item-header">
                    <h3>Росводресурсы отпраздновали Дни Дона и Волги</h3>
                    <span class="date">29 мая 2024</span>
                </div>
                <div class="images">
                    <img src="/front/src/baikalmb.jpeg" alt="Дон">
                    <img src="/front/src/baimalmb2.png" alt="Волга">
                </div>
            </article>
            <article class="news-item">
                <div class="news-item-header">
                    <h3>Ленское ББУ участвовало в забеге "Беги Форест, беги"</h3>
                    <span class="date">27 мая 2024</span>
                </div>
                <div class="images">
                    <img src="front/src/run.jpeg" alt="Runner">
                    <img src="front/src/run2.jpeg" alt="Finish line">
                </div>
            </article>
        </section>
    </main>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            fetch('http://25.21.178.79:8000/api/polls/')
                .then(response => response.json())
                .then(data => createPolls(data.results))
                .catch(error => console.error('Ошибка при получении опросов:', error));
        });

        function createPolls(polls) {
            const newsSection = document.querySelector('.news'); // Находим секцию новостей
            if (!newsSection) return; // Если секция новостей не найдена, прекращаем работу

            const pollContainer = document.createElement('div');
            pollContainer.classList.add('poll-container');

            polls.forEach(poll => {
                const pollElement = document.createElement('div');
                pollElement.classList.add('poll');

                const questionText = document.createElement('p');
                questionText.textContent = poll.question_text;
                pollElement.appendChild(questionText);

                const pollId = `poll-${poll.id}`;
                const selectedChoice = localStorage.getItem(pollId);

                poll.choices.forEach(choice => {
                    const choiceElement = document.createElement('div');
                    choiceElement.classList.add('choice');

                    const choiceText = document.createElement('label');
                    const isChecked = selectedChoice === choice.id.toString() ? 'checked' : '';
                    choiceText.innerHTML = `<input type="radio" name="choice-${poll.id}" value="${choice.id}" ${isChecked} ${selectedChoice ? 'disabled' : ''}>${choice.choice_text}`;
                    choiceElement.appendChild(choiceText);

                    pollElement.appendChild(choiceElement);
                });

                pollContainer.appendChild(pollElement);
            });

            newsSection.appendChild(pollContainer); // Вставляем контейнер опросов в секцию новостей

            // Add event listeners to the dynamically created radio buttons
            document.querySelectorAll('.choice input[type="radio"]').forEach(input => {
                input.addEventListener('change', function() {
                    const pollId = this.name.replace('choice-', '');
                    localStorage.setItem(`poll-${pollId}`, this.value);
                    disablePoll(pollId);
                    showSelectedChoice(this);
                });
            });
        }

        function disablePoll(pollId) {
            document.querySelectorAll(`input[name="choice-${pollId}"]`).forEach(input => {
                input.disabled = true;
            });
        }

        function showSelectedChoice(input) {
            input.checked = true;
        }
    </script>
</body>
</html>

